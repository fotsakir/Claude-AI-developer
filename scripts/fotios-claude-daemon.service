[Unit]
Description=Fotios Claude Daemon
After=network.target mysql.service

[Service]
Type=simple
User=claude
Group=claude
WorkingDirectory=/opt/fotios-claude
ExecStart=/usr/bin/python3 /opt/fotios-claude/scripts/claude-daemon.py
Restart=always
RestartSec=5
StandardOutput=append:/var/log/fotios-claude/daemon.log
StandardError=append:/var/log/fotios-claude/daemon.log

# Environment
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
